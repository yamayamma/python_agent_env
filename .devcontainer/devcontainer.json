{
    // Dev Containerの人間可読な名前
    "name": "AI-Augmented Python (uv, Claude, Gemini)",

    // 環境のベースとなるDockerイメージ。特定のPythonバージョンとOSを指定
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bullseye",

    // 環境に追加する機能（Features）
    "features": {
        // Python環境を管理するための公式Feature
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.12"
        },
        // Claude CodeとGemini CLIのインストールに必要なNode.js
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        },
        // Claude Codeをインストールするための公式Feature
        "ghcr.io/anthropics/devcontainer-features/claude-code:1": {}
    },

    // コンテナ内で操作を行うデフォルトの非rootユーザー
    "remoteUser": "vscode",

    // Docker名前付きボリュームをuvのキャッシュディレクトリとしてマウント
    "mounts": [
        "source=uv-cache,target=/home/vscode/.cache/uv,type=volume"
    ],

    // コンテナ全体で利用可能な環境変数
    "containerEnv": {
        // uvに永続化ボリュームをキャッシュとして使用させる
        "UV_CACHE_DIR": "/home/vscode/.cache/uv"
    },

    // コンテナ作成後に一度だけ実行されるコマンド
    "postCreateCommand": "npm install -g @google/gemini-cli && sudo chown -R vscode:vscode /home/vscode/.cache/uv && curl -LsSf https://astral.sh/uv/install.sh | sh && uv sync",

    // --- 作業ディレクトリ ---
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "workspaceFolder": "/workspace",

    // VS CodeのIDE環境をカスタマイズ
    "customizations": {
        "vscode": {
            // 自動的にインストールするVS Code拡張機能
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "RooVeterinaryInc.roo-cline",
                "ms-vscode.vscode-docker",
                "charliermarsh.ruff",
                "ms-python.mypy-type-checker",
                "GitHub.copilot",
                "eamodio.gitlens"
            ],
            // ワークスペース固有のVS Code設定
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.testing.pytestEnabled": true,
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll": "explicit"
                },
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff"
                },
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash"
                    }
                }
            }
        }
    }
}