{
  "name": "Python 3.12 + Claude Code",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",

  "features": {
    "ghcr.io/anthropics/devcontainer-features/claude-code:latest": {}
  },

  "containerUser": "vscode",

  "remoteEnv": {
    // --- Python/uv å…±é€š ---
    "UV_SYSTEM_PYTHON": "1",
    "PIP_BREAK_SYSTEM_PACKAGES": "1",
    "PYTHONNOUSERSITE": "1",
    "UV_LINK_MODE": "copy",
    // --- Claude Code ---
    "CLAUDE_CONFIG_DIR": "/home/vscode/.claude"
  },

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.terminal.activateEnvironment": false
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "RooVeterinaryInc.roo-cline",
        "ms-vscode.vscode-docker"
      ]
    }
  },

  // --- ä½œæ¥­ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒª ---
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "workspaceFolder": "/workspace",

  // --- æ°¸ç¶šåŒ–ãƒœãƒªãƒ¥ãƒ¼ãƒ  ---
  "mounts": [
    // 1. pip/uv ã® wheel ã‚­ãƒ£ãƒƒã‚·ãƒ¥ï¼ˆé€Ÿåº¦ç”¨ï¼‰
    "source=global-cache,target=/home/vscode/.cache/,type=volume",

    // 2. Claude Code ã®å±¥æ­´
    "source=claude-data,target=/home/vscode/.claude,type=volume",

    // 3. **site-packages**ï¼ˆå®Ÿä½“ã®æ°¸ç¶šåŒ–ï¼‰
    "source=python-packages,target=/usr/local/lib/python3.12/site-packages,type=volume",
    "source=python-bin,target=/usr/local/bin,type=volume"
  ],

  // --- åˆæœŸã‚»ãƒƒãƒˆã‚¢ãƒƒãƒ— ---
  "postCreateCommand": "sudo install -d -o vscode -g vscode -m 755 /usr/local/lib/python3.12 && sudo install -d -o vscode -g vscode -m 755 /usr/local/bin && sudo install -d -o vscode -g vscode -m 755 /home/vscode/.cache && pip install --upgrade uv && if [ -f pyproject.toml ]; then uv sync --system; fi && echo 'Setup complete ğŸ‰ (packages now survive rebuilds)'"
}